sudo apt update
sudo apt install -y \
  build-essential \
  cmake \
  pkg-config \
  libglfw3-dev \
  libxrandr-dev \
  libxinerama-dev \
  libxcursor-dev \
  libxi-dev \
  libgl1-mesa-dev

git clone https://github.com/codam-coding-college/MLX42.git
cd MLX42
cmake -B build
cmake --build build
sudo cmake --install build

cc tui.c -lmlx42 -lglfw -lGL -lm -ldl -lpthread
